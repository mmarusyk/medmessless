<div class="modal">
  <%= form_for(@appointment) do |f| %>
    <div class="field">
      <%= f.label :recomendations %><br />
      <%= f.text_area :recomendations, class: "w-[400px] h-40" %>
    </div>

    <div class="actions flex justify-center">
      <%= f.submit "Update", class: "text-xl blue-link-bg" %>
    </div>
  <% end %>
</div>
